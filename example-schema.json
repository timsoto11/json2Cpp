{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "version": {
            "type": "string",
            "enum": [
                "1.15"
            ]
        },
        "enforcement": {
            "title": "Enforcement",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "unit": {
                    "title": "Unit",
                    "type": "integer",
                    "description": "MPH or KPH",
                    "oneOf": [
                        {
                            "enum": [
                                0
                            ],
                            "title": "Imperial"
                        },
                        {
                            "enum": [
                                1
                            ],
                            "title": "Metric"
                        }
                    ],
                    "default": 0
                },
                "limit": {
                    "title": "Limit",
                    "type": "number",
                    "description": "Speed limit in the unit specified above",
                    "minimum": 0.0,
                    "maximum": 255.0,
                    "default": 10.0
                },
                "speed": {
                    "title": "Limit",
                    "type": "number",
                    "description": "Speed limit in the interger",
                    "minimum": 0,
                    "maximum": 255,
                    "default": 11
                }
            },
            "required": [
                "unit"
            ]
        },
        "violation":    {
            "type":"string",
            "default": null
        } 
    }
}